<Window x:Class="GuardVNFaceRecoginition.AddCameraWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:GuardVNFaceRecoginition.Converters"
        Title="Add New Camera" Height="450" Width="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5">
    
    <Window.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>
    
    <Grid>
        <!-- Main Content Border -->
        <Border Background="White" CornerRadius="8" Margin="10" BorderBrush="#E0E0E0" BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect Color="Black" Direction="315" ShadowDepth="2" Opacity="0.15" BlurRadius="6"/>
            </Border.Effect>
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="55"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="65"/>
                </Grid.RowDefinitions>
                
                <!-- Header with Close Button -->
                <Border Grid.Row="0" Background="#F8F9FA" CornerRadius="8,8,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Text="Add New Camera" 
                                   FontSize="16" FontWeight="SemiBold" Foreground="#333"
                                   VerticalAlignment="Center" Margin="25,0,0,0"/>
                        
                        <Button Grid.Column="1" Content="âœ•" 
                                Width="28" Height="28" 
                                Background="Transparent" 
                                BorderThickness="0"
                                FontSize="12" 
                                Foreground="#999"
                                Cursor="Hand"
                                Margin="0,0,15,0"
                                Command="{Binding CancelCommand}">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="14">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#F0F0F0"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Border>
                
                <!-- Form Content -->
                <StackPanel Grid.Row="1" Margin="25,20,25,10">
                    <!-- Camera Name -->
                    <TextBlock Text="Camera Name" FontSize="13" Foreground="#333" Margin="0,0,0,6"/>
                    <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4" Background="White" Margin="0,0,0,18">
                        <TextBox Text="{Binding CameraName, UpdateSourceTrigger=PropertyChanged}"
                                 Height="40" 
                                 Padding="12,10" 
                                 FontSize="13" 
                                 BorderThickness="0"
                                 Background="Transparent"
                                 VerticalContentAlignment="Center"/>
                    </Border>
                    
                    <!-- Stream Type -->
                    <TextBlock Text="Stream Type" FontSize="13" Foreground="#333" Margin="0,0,0,6"/>
                    <ComboBox ItemsSource="{Binding SourceTypes}"
                              SelectedItem="{Binding SourceType}"
                              Height="40" 
                              FontSize="13" 
                              Background="White"
                              BorderBrush="#E0E0E0"
                              BorderThickness="1"
                              Margin="0,0,0,18">
                        <ComboBox.Style>
                            <Style TargetType="ComboBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ComboBox">
                                            <Grid>
                                                <!-- Main Button Area -->
                                                <ToggleButton Name="ToggleButton" 
                                                              Grid.ColumnSpan="2"
                                                              Focusable="false"
                                                              IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                              ClickMode="Press"
                                                              Background="{TemplateBinding Background}"
                                                              BorderBrush="{TemplateBinding BorderBrush}"
                                                              BorderThickness="{TemplateBinding BorderThickness}">
                                                    <ToggleButton.Style>
                                                        <Style TargetType="ToggleButton">
                                                            <Setter Property="Template">
                                                                <Setter.Value>
                                                                    <ControlTemplate TargetType="ToggleButton">
                                                                        <Border Background="{TemplateBinding Background}" 
                                                                                BorderBrush="{TemplateBinding BorderBrush}" 
                                                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                                                CornerRadius="4">
                                                                            <Grid>
                                                                                <Grid.ColumnDefinitions>
                                                                                    <ColumnDefinition Width="*"/>
                                                                                    <ColumnDefinition Width="32"/>
                                                                                </Grid.ColumnDefinitions>
                                                                                
                                                                                <!-- Content Area -->
                                                                                <ContentPresenter Grid.Column="0" 
                                                                                                Name="ContentSite"
                                                                                                Content="{Binding SelectionBoxItem, RelativeSource={RelativeSource AncestorType=ComboBox}}"
                                                                                                ContentTemplate="{Binding SelectionBoxItemTemplate, RelativeSource={RelativeSource AncestorType=ComboBox}}"
                                                                                                Margin="12,0,0,0"
                                                                                                VerticalAlignment="Center"
                                                                                                HorizontalAlignment="Left"/>
                                                                                
                                                                                <!-- Arrow -->
                                                                                <Path Grid.Column="1" 
                                                                                      Data="M 0 0 L 4 4 L 8 0 Z" 
                                                                                      Fill="#666" 
                                                                                      HorizontalAlignment="Center" 
                                                                                      VerticalAlignment="Center"
                                                                                      Name="Arrow"/>
                                                                            </Grid>
                                                                        </Border>
                                                                        <ControlTemplate.Triggers>
                                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                                <Setter Property="BorderBrush" Value="#2196F3"/>
                                                                                <Setter TargetName="Arrow" Property="Fill" Value="#2196F3"/>
                                                                            </Trigger>
                                                                            <Trigger Property="IsChecked" Value="True">
                                                                                <Setter Property="BorderBrush" Value="#2196F3"/>
                                                                                <Setter TargetName="Arrow" Property="Fill" Value="#2196F3"/>
                                                                                <Setter TargetName="Arrow" Property="Data" Value="M 0 4 L 4 0 L 8 4 Z"/>
                                                                            </Trigger>
                                                                        </ControlTemplate.Triggers>
                                                                    </ControlTemplate>
                                                                </Setter.Value>
                                                            </Setter>
                                                        </Style>
                                                    </ToggleButton.Style>
                                                </ToggleButton>

                                                <!-- Popup -->
                                                <Popup Name="Popup" 
                                                       Placement="Bottom"
                                                       IsOpen="{TemplateBinding IsDropDownOpen}"
                                                       AllowsTransparency="True"
                                                       Focusable="False"
                                                       PopupAnimation="Slide">
                                                    <Grid Name="DropDown"
                                                          SnapsToDevicePixels="True"                
                                                          MinWidth="{TemplateBinding ActualWidth}"
                                                          MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                                        <Border x:Name="DropDownBorder"
                                                                Background="White"
                                                                BorderThickness="1"
                                                                BorderBrush="#E0E0E0"
                                                                CornerRadius="4">
                                                            <Border.Effect>
                                                                <DropShadowEffect Color="Black" Direction="315" ShadowDepth="2" Opacity="0.15" BlurRadius="6"/>
                                                            </Border.Effect>
                                                            <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                                                <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained" />
                                                            </ScrollViewer>
                                                        </Border>
                                                    </Grid>
                                                </Popup>
                                            </Grid>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsFocused" Value="True">
                                                    <Setter TargetName="ToggleButton" Property="BorderBrush" Value="#2196F3"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ComboBox.Style>
                        
                        <!-- ComboBox Item Style -->
                        <ComboBox.ItemContainerStyle>
                            <Style TargetType="ComboBoxItem">
                                <Setter Property="Padding" Value="12,8"/>
                                <Setter Property="FontSize" Value="13"/>
                                <Setter Property="Foreground" Value="#333"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ComboBoxItem">
                                            <Border Name="Border" 
                                                    Padding="{TemplateBinding Padding}" 
                                                    Background="{TemplateBinding Background}"
                                                    CornerRadius="2"
                                                    Margin="2,1">
                                                <ContentPresenter />
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsHighlighted" Value="True">
                                                    <Setter TargetName="Border" Property="Background" Value="#E3F2FD"/>
                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="Border" Property="Background" Value="#2196F3"/>
                                                    <Setter Property="Foreground" Value="White"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ComboBox.ItemContainerStyle>
                    </ComboBox>
                    
                    <!-- Link Stream / ID Webcam -->
                    <TextBlock Text="Link Stream / ID Webcam" FontSize="13" Foreground="#333" Margin="0,0,0,6"/>
                    <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4" Background="White">
                        <Grid>
                            <TextBox Text="{Binding Source, UpdateSourceTrigger=PropertyChanged}"
                                     Height="40" 
                                     Padding="12,10" 
                                     FontSize="13" 
                                     BorderThickness="0"
                                     Background="Transparent"
                                     VerticalContentAlignment="Center"/>
                            <TextBlock Text="{Binding PlaceholderText}"
                                       FontSize="13" 
                                       Foreground="#AAA" 
                                       Margin="15,0,0,0"
                                       VerticalAlignment="Center"
                                       IsHitTestVisible="False"
                                       Visibility="{Binding Source, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=invert}"/>
                        </Grid>
                    </Border>
                </StackPanel>
                
                <!-- Buttons -->
                <Border Grid.Row="2" BorderBrush="#F0F0F0" BorderThickness="0,1,0,0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" 
                                Margin="0,0,25,0" VerticalAlignment="Center">
                        <Button Content="Close"
                                Height="36" Width="75"
                                Background="#9E9E9E" Foreground="White" 
                                BorderThickness="0"
                                FontSize="13"
                                Cursor="Hand"
                                Margin="0,0,12,0" 
                                Command="{Binding CancelCommand}">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Opacity" Value="0.9"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                        
                        <Button Content="Save"
                                Height="36" Width="75"
                                Background="#2196F3" Foreground="White" 
                                BorderThickness="0"
                                FontSize="13"
                                Cursor="Hand"
                                Command="{Binding AddCameraCommand}">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Opacity" Value="0.9"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>