<Window x:Class="GuardVNFaceRecoginition.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GuardVNFaceRecoginition"
        xmlns:converters="clr-namespace:GuardVNFaceRecoginition.Converters"
        mc:Ignorable="d"
        Title="GuardVN Face Recognition" Height="800" Width="1400"
        WindowState="Maximized"
        Background="#F5F5F5">
    
    <Window.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:ColorToBrushConverter x:Key="ColorToBrushConverter"/>
        <converters:BooleanToBrushConverter x:Key="BooleanToBrushConverter"/>
        <converters:BooleanToForegroundConverter x:Key="BooleanToForegroundConverter"/>
        
        <!-- Modern ComboBox Style -->
        <Style x:Key="ModernComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <!-- Main Button Area -->
                            <ToggleButton Name="ToggleButton" 
                                          Grid.ColumnSpan="2"
                                          Focusable="false"
                                          IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          ClickMode="Press"
                                          Background="{TemplateBinding Background}"
                                          BorderBrush="{TemplateBinding BorderBrush}"
                                          BorderThickness="{TemplateBinding BorderThickness}">
                                <ToggleButton.Style>
                                    <Style TargetType="ToggleButton">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ToggleButton">
                                                    <Border Background="{TemplateBinding Background}" 
                                                            BorderBrush="{TemplateBinding BorderBrush}" 
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            CornerRadius="6">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="32"/>
                                                            </Grid.ColumnDefinitions>
                                                            
                                                            <!-- Content Area -->
                                                            <ContentPresenter Grid.Column="0" 
                                                                            Name="ContentSite"
                                                                            Content="{Binding SelectionBoxItem, RelativeSource={RelativeSource AncestorType=ComboBox}}"
                                                                            ContentTemplate="{Binding SelectionBoxItemTemplate, RelativeSource={RelativeSource AncestorType=ComboBox}}"
                                                                            Margin="12,0,0,0"
                                                                            VerticalAlignment="Center"
                                                                            HorizontalAlignment="Left"/>
                                                            
                                                            <!-- Arrow -->
                                                            <Path Grid.Column="1" 
                                                                  Data="M 0 0 L 4 4 L 8 0 Z" 
                                                                  Fill="#666" 
                                                                  HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"
                                                                  Name="Arrow"/>
                                                        </Grid>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="BorderBrush" Value="#4285F4"/>
                                                            <Setter TargetName="Arrow" Property="Fill" Value="#4285F4"/>
                                                        </Trigger>
                                                        <Trigger Property="IsChecked" Value="True">
                                                            <Setter Property="BorderBrush" Value="#4285F4"/>
                                                            <Setter TargetName="Arrow" Property="Fill" Value="#4285F4"/>
                                                            <Setter TargetName="Arrow" Property="Data" Value="M 0 4 L 4 0 L 8 4 Z"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ToggleButton.Style>
                            </ToggleButton>

                            <!-- Popup -->
                            <Popup Name="Popup" 
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Slide">
                                <Grid Name="DropDown"
                                      SnapsToDevicePixels="True"                
                                      MinWidth="{TemplateBinding ActualWidth}"
                                      MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border x:Name="DropDownBorder"
                                            Background="White"
                                            BorderThickness="1"
                                            BorderBrush="#E0E0E0"
                                            CornerRadius="8">
                                        <Border.Effect>
                                            <DropShadowEffect Color="Black" Direction="315" ShadowDepth="3" Opacity="0.2" BlurRadius="10"/>
                                        </Border.Effect>
                                        <ScrollViewer Margin="6,8,6,8" SnapsToDevicePixels="True" VerticalScrollBarVisibility="Auto">
                                            <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained" />
                                        </ScrollViewer>
                                    </Border>
                                </Grid>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="ToggleButton" Property="BorderBrush" Value="#4285F4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <!-- ComboBox Item Style -->
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Padding" Value="12,10"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="Foreground" Value="#333"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ComboBoxItem">
                                    <Border Name="Border" 
                                            Padding="{TemplateBinding Padding}" 
                                            Background="{TemplateBinding Background}"
                                            CornerRadius="4"
                                            Margin="2,1">
                                        <ContentPresenter />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsHighlighted" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="#E3F2FD"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="#4285F4"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                        <MultiTrigger>
                                            <MultiTrigger.Conditions>
                                                <Condition Property="IsSelected" Value="True"/>
                                                <Condition Property="IsHighlighted" Value="False"/>
                                            </MultiTrigger.Conditions>
                                            <Setter TargetName="Border" Property="Background" Value="#4285F4"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </MultiTrigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F0F0F0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <!-- Main Button Area -->
                            <ToggleButton Name="ToggleButton" 
                                          Grid.ColumnSpan="2"
                                          Focusable="false"
                                          IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          ClickMode="Press"
                                          Background="{TemplateBinding Background}"
                                          BorderBrush="{TemplateBinding BorderBrush}"
                                          BorderThickness="{TemplateBinding BorderThickness}">
                                <ToggleButton.Style>
                                    <Style TargetType="ToggleButton">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ToggleButton">
                                                    <Border Background="{TemplateBinding Background}" 
                                                            BorderBrush="{TemplateBinding BorderBrush}" 
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            CornerRadius="6">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="30"/>
                                                            </Grid.ColumnDefinitions>
                                                            
                                                            <!-- Content Area -->
                                                            <ContentPresenter Grid.Column="0" 
                                                                            Name="ContentSite"
                                                                            Content="{Binding SelectionBoxItem, RelativeSource={RelativeSource AncestorType=ComboBox}}"
                                                                            ContentTemplate="{Binding SelectionBoxItemTemplate, RelativeSource={RelativeSource AncestorType=ComboBox}}"
                                                                            Margin="12,0,0,0"
                                                                            VerticalAlignment="Center"
                                                                            HorizontalAlignment="Left"/>
                                                            
                                                            <!-- Arrow -->
                                                            <Path Grid.Column="1" 
                                                                  Data="M 0 0 L 4 4 L 8 0 Z" 
                                                                  Fill="#666" 
                                                                  HorizontalAlignment="Center" 
                                                                  VerticalAlignment="Center"/>
                                                        </Grid>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="BorderBrush" Value="#4285F4"/>
                                                        </Trigger>
                                                        <Trigger Property="IsChecked" Value="True">
                                                            <Setter Property="BorderBrush" Value="#4285F4"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ToggleButton.Style>
                            </ToggleButton>
                    
                            <!-- Popup -->
                            <Popup Name="Popup" 
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Slide">
                                <Grid Name="DropDown"
                                      SnapsToDevicePixels="True"                
                                      MinWidth="{TemplateBinding ActualWidth}"
                                      MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border x:Name="DropDownBorder"
                                            Background="White"
                                            BorderThickness="1"
                                            BorderBrush="#E0E0E0"
                                            CornerRadius="6">
                                        <Border.Effect>
                                            <DropShadowEffect Color="Black" Direction="315" ShadowDepth="2" Opacity="0.15" BlurRadius="8"/>
                                        </Border.Effect>
                                        <ScrollViewer Margin="4,8,4,8" SnapsToDevicePixels="True">
                                            <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained" />
                                        </ScrollViewer>
                                    </Border>
                                </Grid>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="ToggleButton" Property="BorderBrush" Value="#4285F4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="ConnectedStatusStyle" TargetType="Border">
            <Setter Property="Background" Value="#28A745"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="0,0,15,0"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header Navigation -->
        <Border Grid.Row="0" Background="White" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <Grid Margin="25,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Logo -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Ellipse Width="35" Height="35" Fill="#4285F4" Margin="0,0,12,0"/>
                    <TextBlock Text="GUARDVN" FontSize="20" FontWeight="Bold" Foreground="#4285F4" VerticalAlignment="Center"/>
                </StackPanel>
                
                <!-- Navigation Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Button Content="📹 Live Camera" 
                            Style="{StaticResource NavButtonStyle}" 
                            Background="#4285F4" 
                            Foreground="White"
                            Command="{Binding NavigateToLiveCameraCommand}"/>
                    <Button Content="🔍 Image Search" 
                            Style="{StaticResource NavButtonStyle}" 
                            Background="Transparent"
                            Foreground="#666666"
                            Command="{Binding NavigateToImageSearchCommand}"/>
                    <Button Content="🖼️ Gallery" 
                            Style="{StaticResource NavButtonStyle}" 
                            Background="Transparent"
                            Foreground="#666666"
                            Command="{Binding NavigateToGalleryCommand}"/>
                    <Button Content="📊 Statistics" 
                            Style="{StaticResource NavButtonStyle}" 
                            Background="Transparent"
                            Foreground="#666666"
                            Command="{Binding NavigateToStatisticsCommand}"/>
                </StackPanel>
                
                <!-- User Status -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Style="{StaticResource ConnectedStatusStyle}">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="8" Height="8" Fill="White" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Connected" Foreground="White" FontSize="13" FontWeight="Medium" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    <Button Content="👤 User" Style="{StaticResource NavButtonStyle}"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content Area -->
        <Grid Grid.Row="1" Margin="25" Visibility="{Binding MainContentVisibility}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left Panel - Camera Feed -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Camera Selection -->
                <Border Grid.Row="0" 
                        Background="White" 
                        CornerRadius="10" 
                        BorderBrush="#E0E0E0" 
                        BorderThickness="1" 
                        Padding="20,15" 
                        Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" 
                                   Text="Live Camera Feed" 
                                   FontSize="18" 
                                   FontWeight="SemiBold" 
                                   VerticalAlignment="Center" 
                                   Margin="0,0,20,0"/>
                        
                        <ComboBox Grid.Column="1" 
                                  ItemsSource="{Binding Cameras}"
                                  SelectedItem="{Binding SelectedCamera}"
                                  DisplayMemberPath="Name"
                                  HorizontalAlignment="Left" 
                                  Width="220" 
                                  Style="{StaticResource ModernComboBoxStyle}"/>
                    </Grid>
                </Border>
                
                <!-- Camera Display -->
                <Border Grid.Row="1" Background="Black" CornerRadius="10" BorderBrush="#E0E0E0" BorderThickness="1">
                    <Grid>
                        <!-- Camera Frame -->
                        <Rectangle>
                            <Rectangle.Fill>
                                <ImageBrush ImageSource="{Binding CameraFrame}" Stretch="Uniform"/>
                            </Rectangle.Fill>
                        </Rectangle>
                        
                        <!-- Placeholder Text -->
                        <TextBlock Text="{Binding CameraStatusText}"
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center" 
                                   Foreground="Gray" 
                                   FontSize="18" 
                                   Visibility="{Binding CameraPlaceholderVisibility}"/>
                    </Grid>
                </Border>
                
                <!-- Camera Controls -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,20,0,0" HorizontalAlignment="Left">
                    <Button Content="▶ Start" 
                            Background="#28A745" 
                            Style="{StaticResource RoundedButtonStyle}" 
                            Command="{Binding StartCameraCommand}"/>
                    <Button Content="⏹ Stop" 
                            Background="#DC3545" 
                            Style="{StaticResource RoundedButtonStyle}" 
                            Command="{Binding StopCameraCommand}"/>
                    <Button Content="📷 Capture" 
                            Background="#6C757D" 
                            Style="{StaticResource RoundedButtonStyle}" 
                            Command="{Binding CaptureCameraCommand}"/>
                    <Button Content="➕ Add Camera" 
                            Background="#17A2B8" 
                            Style="{StaticResource RoundedButtonStyle}" 
                            Command="{Binding AddCameraCommand}"/>
                    <Button Content="✏️ Edit" 
                            Background="#FFC107" 
                            Foreground="Black" 
                            Style="{StaticResource RoundedButtonStyle}" 
                            Command="{Binding EditCameraCommand}"/>
                    <Button Content="🗑️ Remove" 
                            Background="#DC3545" 
                            Style="{StaticResource RoundedButtonStyle}" 
                            Margin="0" 
                            Command="{Binding RemoveCameraCommand}"/>
                </StackPanel>
            </Grid>
            
            <!-- Right Panel -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="25"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                
                <!-- Live Search Results -->
                <Border Grid.Row="0" Background="White" CornerRadius="10" BorderBrush="#E0E0E0" BorderThickness="1" Padding="25">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Text="Live Search Results" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,20"/>
                        
                        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Ellipse Width="70" Height="70" Fill="#E0E0E0" Margin="0,0,0,20"/>
                            <TextBlock Text="🔍" FontSize="35" HorizontalAlignment="Center" Margin="0,0,0,12"/>
                            <TextBlock Text="Start camera to see results" FontSize="13" Foreground="Gray" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- Detection Stats -->
                <Border Grid.Row="2" Background="White" CornerRadius="10" BorderBrush="#E0E0E0" BorderThickness="1" Padding="25">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Text="Detection Stats" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,20"/>
                        
                        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Ellipse Width="90" Height="90" Stroke="#E0E0E0" StrokeThickness="10" Margin="0,0,0,20"/>
                            <TextBlock Text="Start camera to see stats" FontSize="13" Foreground="Gray" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
        
        <!-- Content Pages -->
        <Grid Grid.Row="1" Margin="25" Visibility="{Binding ContentAreaVisibility}">
            <!-- Gallery Content -->
            <Border Background="White" 
                    CornerRadius="10" 
                    BorderBrush="#E0E0E0" 
                    BorderThickness="1" 
                    Padding="30" 
                    Visibility="Collapsed"
                    x:Name="galleryContentBorder">
                <StackPanel>
                    <TextBlock Text="Gallery Content" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,25"/>
                    <TextBlock Text="Image gallery will be displayed here" Foreground="Gray" FontSize="14"/>
                </StackPanel>
            </Border>
            
            <!-- Statistics Content -->
            <Border Background="White" 
                    CornerRadius="10" 
                    BorderBrush="#E0E0E0" 
                    BorderThickness="1" 
                    Padding="30" 
                    Visibility="Collapsed"
                    x:Name="statisticsContentBorder">
                <StackPanel>
                    <TextBlock Text="Statistics Content" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,25"/>
                    <TextBlock Text="Statistics and analytics will be displayed here" Foreground="Gray" FontSize="14"/>
                </StackPanel>
            </Border>
            
            <!-- Image Search Content -->
            <Border Background="White" 
                    CornerRadius="10" 
                    BorderBrush="#E0E0E0" 
                    BorderThickness="1" 
                    Padding="30" 
                    Visibility="Collapsed"
                    x:Name="imageSearchContentBorder">
                <StackPanel>
                    <TextBlock Text="Image Search" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,25"/>
                    <TextBlock Text="Image search functionality will be displayed here" Foreground="Gray" FontSize="14"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
